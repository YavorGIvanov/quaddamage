//
// An example scene, which represents the same scenery as what the initializeScene()
// function used to create around lecture 7
// Namely:
//  1) A shiny floor, made of a woody Lambert shader and a mirror layer on top
//  2) A soccer ball
//  3) A shiny ball using a glossy shader
//  4) Three small phong-lit balls, using red, yellow and green colors



// 1. First, some global settings
GlobalSettings {
	frameWidth          640
	frameHeight         480
	ambientLight        (0.5, 0.5, 0.5)
}

PointLight sun {
	pos            (-90, 1200, -750)
	power          1200000
}

// 2. A camera
Camera camera {
	position     (45, 120, -300)
	aspectRatio  1.33333
	yaw             5
	pitch          -5
	roll            0
	fov            60
}

// 3. The floor node:
Plane floor {
	y      -0.01
	limit    200
}

BitmapTexture wood_tex {
	file "texture/wood.bmp"
	scaling 100
}

Lambert floor_diffuse {
	texture wood_tex
}

Refl mirror {
}

Fresnel mirror_fresnel {
	ior 1.33
}

Layered floor_shader {
	layer floor_diffuse (1, 1, 1)
	layer mirror        (0.05, 0.05, 0.05) mirror_fresnel
}

Node floor {
	geometry floor
	shader   floor_shader
}

// 5. A glossy sphere:
Sphere S {
}

Refl glossy {
	multiplier 0.95
	glossiness  0.97
	numSamples  25
}

Node sphere {
	geometry S
	shader glossy
	translate (100, 50, 60)
	scale     ( 50, 50, 50)
}

// 6. Three phong spheres (red, yellow and green):
Phong p1 {
	color             (0.95, 0.05, 0.05)
	specularExponent  32
}

Phong p2 {
	color             (0.95, 0.95, 0.10)
	specularExponent  32
}

Phong p3 {
	color             (0.05, 0.95, 0.05)
	specularExponent  32
}

Node small_sphere_red {
	geometry   S
	shader     p1
	scale      (15, 15, 15)
	translate  (10, 15,  0)
}

Node small_sphere_yellow {
	geometry   S
	shader     p2
	scale      (15, 15, 15)
	translate  (42, 15,  0)
}

Node small_sphere_green {
	geometry   S
	shader     p3
	scale      (15, 15, 15)
	translate  (74, 15,  0)
}

// 7. The soccer ball

CheckerTexture checker {
	color1	(0.7, 0.7, 0.7)
	color2	(0.75, 0.15, 0.15)
	scaling 100
}

Lambert soccer_ball_shader {
	texture checker
}


//Node heart {
//	geometry heart
//	shader   lava_shader
//	translate (-100, 50, 0)
//	scale (25, 25, 25)
//	rotate (-45, 60, 0)
//}

Mesh teapot {
	file "geom/teapot_lowres.obj"
}

Node teapot {
	geometry teapot
	shader soccer_ball_shader
	translate (-100, 0, 0)
	scale (60, 60, 60)
}

// 8. And, finally, an environment
CubemapEnvironment {
	folder "env/forest"
}

